<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ShapeMover.WPF.Controls">
    <Style TargetType="local:CircleContainer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CircleContainer">
                    <Canvas x:Name="PART_CircleCanvas" AllowDrop="True" Background="LightYellow"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>